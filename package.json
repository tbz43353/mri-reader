{
  "name": "mri-reader-app",
  "version": "1.0.0",
  "productName": "MRI Reader",
  "description": "A desktop application for viewing personal MRI and DICOM medical imaging files",
  "author": "Tony Biz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbz43353/mri-reader-app.git"
  },
  "bugs": {
    "url": "https://github.com/tbz43353/mri-reader-app/issues"
  },
  "homepage": "https://github.com/tbz43353/mri-reader-app#readme",
  "keywords": [
    "mri",
    "dicom",
    "medical-imaging",
    "viewer",
    "electron",
    "healthcare",
    "desktop-app",
    "react",
    "typescript"
  ],
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron": "ELECTRON_RUN_AS_NODE= electron .",
    "electron:dev": "npm run build && concurrently \"npm run dev\" \"wait-on http://localhost:5175 && ELECTRON_RUN_AS_NODE= electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:pack:mac": "npm run build && electron-builder --mac",
    "electron:pack:win": "npm run build && electron-builder --win",
    "electron:pack:linux": "npm run build && electron-builder --linux",
    "electron:pack:all": "npm run build && electron-builder --mac --win --linux",
    "electron:dev:pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@cornerstonejs/core": "^2.0.0",
    "@cornerstonejs/dicom-image-loader": "^2.0.0",
    "@cornerstonejs/tools": "^2.0.0",
    "dicom-parser": "^1.8.21",
    "fflate": "^0.8.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.8.3",
    "vite": "^6.4.1",
    "wait-on": "^8.0.1"
  }
}
